{
    "type": "project",
    "config": {
        "vendor-dir": "app/wp-content/vendor"
    },
    "extra": {
        "wordpress-install-dir": "app/wp",
        "installer-paths": {
            "app/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "app/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "require": {
        "johnpbloch/wordpress": ">=5.1",
        "wpackagist-plugin/advanced-custom-fields": "*",
        "wpackagist-plugin/contact-form-7": "*",
        "wpackagist-plugin/manual-image-crop": "*",
        "wpackagist-plugin/regenerate-thumbnails": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url" : "https://wpackagist.org"
        }
    ]
}
